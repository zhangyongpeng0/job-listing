
<div class="container page-wrap ">
 <div class="devise-view">
    <img src="http://ogk4z553l.bkt.clouddn.com/banner002.jpg" alt="background image">

  <div class="col-md-4 col-md-offset-4 login-page">
   <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center">log in</h2>
     <div class="form-inputs">
       <%= f.input :email, required: false, autofocus: true, class: "form-control" %>
       <%= f.input :password, required: false, class: "form-control" %>
       <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
     </div>

     <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
     </div>
     <br>
     <%= render "devise/shared/links" %>
   <% end %>
</div>
</div>
</div>
